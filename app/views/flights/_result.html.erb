<% if !@flights.nil? && @flights.any?  %>

    <% @flights.each do |flight| %>
      <ul>
        <li>
          <%= label :flight, :id, "Flight ID: #{flight.id} / Flight Time: #{flight.trip_datetime.strftime("%H:%M")}" %>
          <%= link_to "Choose Flight", new_flight_booking_path(flight_id: flight.id, passenger_count: params[:num_of_passengers]) %>

      </ul>
    <% end %>

<% else %>
  <p>No flights available</p>
<% end %>